{
  "compilerOptions": {
    "target": "ES2020", // Modern JavaScript features for WebAssembly
    "module": "ESNext", // Support for ES Modules
    "moduleResolution": "Node",
    "strict": true, // Enable strict type checking
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@types/web", "vite/client", "@types/audioworklet"], // Include DOM types for Web Audio APIs
    "lib": ["ES2023"] // Ensure DOM APIs are available
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"] // Exclude build and dependency directories
}